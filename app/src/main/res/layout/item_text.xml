<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android" android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    >


    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:padding="@dimen/dp_10"
            >
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <TextView
                    android:id="@+id/dingdan"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="订单号"
                    android:layout_alignParentLeft="true"
                    android:layout_marginRight="@dimen/dp_10"
                    />
                <TextView
                    android:id="@+id/orderId"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_toRightOf="@id/dingdan"
                    android:text="WD20180930884324"
                    />
                <TextView
                    android:id="@+id/allordersDate"
                    android:layout_alignParentRight="true"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="2018-09-30"
                    />
                <android.support.v7.widget.RecyclerView
                    android:id="@+id/recycle"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_below="@id/dingdan"
                    android:padding="@dimen/dp_15"
                    ></android.support.v7.widget.RecyclerView>

            </RelativeLayout>
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="@dimen/dp_10"

                >
                <TextView
                    android:id="@+id/relativeTv4"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="共"
                    android:layout_toLeftOf="@id/allordersCount"
                    />
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/allordersCount"
                    android:textColor="#f00"
                    android:text="2"
                    android:layout_toLeftOf="@id/relativeTv5"
                    />
                <TextView
                    android:id="@+id/relativeTv5"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_toLeftOf="@id/allordersPrice"
                    android:text="件商品，需付款"
                    />
                <TextView
                    android:id="@+id/allordersPrice"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_toLeftOf="@id/yuan"
                    android:text="840.00"
                    android:textColor="#f00"
                    />
                <TextView
                    android:id="@+id/yuan"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="元"
                    android:layout_alignParentRight="true"
                    />
            </RelativeLayout>
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <Button
                    android:layout_width="@dimen/dp_70"
                    android:layout_height="@dimen/dp_26"
                    android:text="取消订单"
                    android:layout_alignParentLeft="true"
                    android:textSize="@dimen/sp_14"
                    android:textColor="@color/text_color_six"
                    android:background="@drawable/allorders_button_background"
                    />
                <Button
                    android:id="@+id/pay"
                    android:layout_width="@dimen/dp_70"
                    android:layout_height="@dimen/dp_26"
                    android:textSize="@dimen/sp_14"
                    android:textColor="@color/white"
                    android:background="@drawable/allorders_button_zhifu"
                    android:text="去支付"
                    android:layout_alignParentRight="true"
                    />
            </RelativeLayout>
        </LinearLayout>
    </ScrollView>
</LinearLayout>