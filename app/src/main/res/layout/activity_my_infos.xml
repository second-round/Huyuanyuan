<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    tools:context=".MyInfoActivity">
    <TextView
        android:layout_marginTop="@dimen/dp_40"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textSize="@dimen/sp_16"
        android:gravity="center"
        android:text="我的资料"
        />
    <RelativeLayout
        android:layout_width="@dimen/dp_312"
        android:layout_gravity="center"
        android:background="@drawable/selector_backgrund_ziliao"
        android:layout_marginTop="@dimen/dp_20"
        android:layout_height="@dimen/dp_138">
        <LinearLayout
            android:id="@+id/linear1"
            android:layout_width="match_parent"
            android:layout_marginTop="@dimen/dp_20"
            android:layout_height="wrap_content">
            <TextView
                android:layout_width="0dp"
                android:textSize="@dimen/sp_14"
                android:layout_weight="1"
                android:text="我的头像"
                android:layout_marginLeft="@dimen/dp_20"
                android:layout_height="wrap_content" />
            <ImageView
                android:layout_width="@dimen/dp_30"
                android:layout_height="@dimen/dp_30"
                android:background="@mipmap/bbb"
                android:layout_marginRight="@dimen/dp_15"/>
        </LinearLayout>
        <TextView
            android:id="@+id/text1"
            android:layout_width="@dimen/dp_272"
            android:layout_height="1dp"
            android:background="#f2f2f2"
            android:layout_marginLeft="@dimen/dp_20"
            android:layout_below="@+id/linear1"
            />
        <LinearLayout
            android:id="@+id/linear2"
            android:layout_width="match_parent"
            android:layout_marginTop="@dimen/dp_10"
            android:layout_below="@+id/text1"
            android:layout_height="wrap_content">
            <TextView
                android:layout_width="0dp"
                android:textSize="@dimen/sp_14"
                android:layout_weight="1"
                android:text="我的昵称"
                android:layout_marginLeft="@dimen/dp_20"
                android:layout_height="wrap_content" />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="@dimen/dp_30"
                android:textSize="@dimen/sp_12"
                android:textColor="#999"
                android:text="我是狂吃不胖的小姐姐"
                android:layout_marginRight="@dimen/dp_15"/>
        </LinearLayout>
        <TextView
            android:layout_width="@dimen/dp_272"
            android:id="@+id/text2"
            android:layout_height="1dp"
            android:background="#f2f2f2"
            android:layout_marginLeft="@dimen/dp_20"
            android:layout_below="@+id/linear2"
            />
        <LinearLayout
            android:id="@+id/linear3"
            android:layout_width="match_parent"
            android:layout_below="@+id/text2"
            android:layout_marginTop="@dimen/dp_10"
            android:layout_height="wrap_content">
            <TextView
                android:layout_width="0dp"
                android:textSize="@dimen/sp_14"
                android:layout_weight="1"
                android:text="我的密码"
                android:layout_marginLeft="@dimen/dp_20"
                android:layout_height="wrap_content" />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="@dimen/dp_30"
                android:textSize="@dimen/sp_12"
                android:textColor="#999"
                android:text="1234567890"
                android:layout_marginRight="@dimen/dp_15"/>
        </LinearLayout>
        <TextView
            android:layout_width="@dimen/dp_272"
            android:layout_height="1dp"
            android:id="@+id/text3"
            android:background="#f2f2f2"
            android:layout_marginLeft="@dimen/dp_20"
            android:layout_below="@+id/linear1"
            />
    </RelativeLayout>
</LinearLayout>