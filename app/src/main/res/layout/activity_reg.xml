<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@mipmap/aaa"
    tools:context=".RegActivity">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/dp_130"
        android:orientation="vertical">

        <EditText
            android:maxLength="11"
            android:id="@+id/phone"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/dp_30"
            android:layout_marginRight="@dimen/dp_30"
            android:layout_marginBottom="@dimen/dp_10"
            android:drawableLeft="@mipmap/register_icon_phone"
            android:drawablePadding="@dimen/dp_25"
            android:hint="手机号"
            android:padding="5dp"
            android:textColor="#fff"
            android:phoneNumber="true"
            android:textColorHint="#fff"
            android:textSize="@dimen/sp_20" />

        <RelativeLayout
            android:id="@+id/re_up"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <EditText
                android:id="@+id/code"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/dp_30"
                android:layout_marginTop="@dimen/dp_10"
                android:layout_marginRight="@dimen/dp_30"
                android:drawableLeft="@mipmap/login_icon_verificationcode"
                android:drawablePadding="@dimen/dp_25"
                android:hint="验证码"
                android:inputType="textPassword"
                android:padding="5dp"
                android:textColor="#fff"
                android:textColorHint="#fff"
                android:textSize="@dimen/sp_20" />
            <TextView
                android:id="@+id/getCode"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_marginRight="@dimen/dp_35"
                android:textColor="#fff"
                android:layout_marginTop="@dimen/dp_20"
                android:text="获取验证码"
                android:textSize="@dimen/dp_10"
                />
        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/re"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <EditText
                android:id="@+id/password"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/dp_30"
                android:layout_marginTop="@dimen/dp_10"
                android:layout_marginRight="@dimen/dp_30"
                android:drawableLeft="@mipmap/register_icon_lock"
                android:drawablePadding="@dimen/dp_25"
                android:hint="登录密码"
                android:inputType="textPassword"
                android:padding="5dp"
                android:textColor="#fff"
                android:textColorHint="#fff"
                android:textSize="@dimen/sp_20" />
            <ImageView
                android:id="@+id/eyes"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_marginRight="@dimen/dp_35"
                android:layout_marginTop="@dimen/dp_20"
                android:src="@mipmap/login_icon_eye"/>
        </RelativeLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/dp_15"
            android:orientation="horizontal">
            <TextView
                android:id="@+id/reg"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="#fff"
                android:layout_marginRight="@dimen/dp_25"
                android:textSize="@dimen/dp_15"
                android:layout_alignParentRight="true"
                android:text="已有账户?立即登录"/>
        </RelativeLayout>
        <Button
            android:id="@+id/btn_login"
            android:layout_width="@dimen/dp_300"
            android:layout_height="wrap_content"
            android:background="@drawable/shape"
            android:layout_gravity="center"
            android:text="注册"
            android:layout_marginTop="@dimen/dp_80"
            android:textColor="#f00"/>
    </LinearLayout>
</RelativeLayout>