<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:background="#fff"
    tools:context=".ui.GoodsActivity">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        >
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/dp_24"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/back"
                android:layout_width="@dimen/dp_24"
                android:layout_height="@dimen/dp_24"
                android:layout_marginTop="@dimen/dp_30" />

            <com.youth.banner.Banner
                android:id="@+id/banner"
                android:layout_width="@dimen/dp_312"
                android:layout_height="@dimen/dp_274"
                android:layout_marginTop="-10dp"></com.youth.banner.Banner>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/price"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/dp_14"
                    android:text="￥159"
                    android:textColor="#f00"
                    android:textSize="@dimen/sp_20" />

                <TextView
                    android:id="@+id/saleNum"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />

            </LinearLayout>

            <TextView
                android:id="@+id/commodityName"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/dp_20"
                android:text="魅可(MAC)经典唇膏 子弹头口红3g Chili秀智色/小辣椒色"
                android:textColor="#666"
                android:textSize="@dimen/sp_12" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/dp_10"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="重量"
                    android:textColor="#666"
                    android:textSize="@dimen/sp_12" />

                <TextView
                    android:id="@+id/weight"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/dp_10"
                    android:text="0.89kg"
                    android:textColor="#666"
                    android:textSize="@dimen/sp_12" />
            </LinearLayout>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/dp_20"
                android:text="商品详情"
                android:textColor="#666"
                android:textSize="@dimen/sp_14" />
            <WebView
                android:id="@+id/webview"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginRight="@dimen/dp_24"
                tools:ignore="WebViewLayout" />
        </LinearLayout>
    </ScrollView>
    <android.support.constraint.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="@dimen/dp_100"
        android:layout_marginRight="@dimen/dp_24"
        >
        <ImageView
            android:id="@+id/shopAdd"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@mipmap/common_btn_add"
            app:layout_constraintRight_toRightOf="parent"
            />
        <ImageView
            android:id="@+id/shopBuy"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@mipmap/common_btn_buy"
            app:layout_constraintTop_toBottomOf="@id/shopAdd"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintLeft_toLeftOf="@id/shopAdd"
            android:layout_marginTop="@dimen/dp_10"
            />
    </android.support.constraint.ConstraintLayout>

</RelativeLayout>
