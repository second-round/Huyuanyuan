<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:paddingLeft="@dimen/dp_24"
    android:paddingRight="@dimen/dp_24"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <LinearLayout
        android:layout_width="@dimen/dp_312"
        android:layout_height="@dimen/dp_108"
        android:layout_marginTop="@dimen/dp_40"
        android:background="@drawable/viewpage_background"
        android:paddingLeft="@dimen/dp_10"
        android:paddingTop="@dimen/dp_20"
        android:paddingRight="@dimen/dp_10"
        android:paddingBottom="@dimen/dp_20"
        android:orientation="vertical"
        >

        <RadioGroup
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp_50"
            android:orientation="horizontal"
            android:id="@+id/group_divider"
            >

            <RadioButton
                android:id="@+id/Allorders"
                android:layout_width="@dimen/dp_40"
                android:layout_height="@dimen/dp_40"
                android:layout_marginLeft="@dimen/dp_15"
                android:layout_marginRight="@dimen/dp_15"
                android:background="@mipmap/quanbudd_ddf"
                android:button="@null"
                android:checked="true"
                />

            <RadioButton
                android:id="@+id/Obligation"
                android:layout_width="@dimen/dp_40"
                android:layout_height="@dimen/dp_40"
                android:background="@mipmap/daifuk_ddf"
                android:button="@null" />

            <RadioButton
                android:id="@+id/ForCollection"
                android:layout_width="@dimen/dp_40"
                android:layout_height="@dimen/dp_40"
                android:layout_marginLeft="@dimen/dp_15"
                android:layout_marginRight="@dimen/dp_15"
                android:background="@mipmap/daishouh_ddf"
                android:button="@null" />

            <RadioButton
                android:id="@+id/beevaluated"
                android:layout_width="@dimen/dp_40"
                android:layout_height="@dimen/dp_40"
                android:layout_marginRight="@dimen/dp_15"
                android:background="@mipmap/daipingj_ddf"
                android:button="@null" />

            <RadioButton
                android:id="@+id/Completed"
                android:layout_width="@dimen/dp_40"
                android:layout_height="@dimen/dp_40"
                android:layout_alignParentTop="true"
                android:layout_marginTop="0dp"
                android:layout_marginRight="@dimen/dp_15"
                android:background="@mipmap/yiwanc_ddf"
                android:button="@null" />
        </RadioGroup>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp_20"
            android:orientation="horizontal"
            android:layout_marginLeft="@dimen/dp_10"
            android:layout_marginRight="@dimen/dp_10"
            >
            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="全部订单"
                android:textSize="@dimen/sp_12"
                android:textColor="@color/text_color_six"
                android:gravity="center"
                />
            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="代付款"
                android:textSize="@dimen/sp_12"
                android:textColor="@color/text_color_six"
                android:gravity="center"
                />
            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="待收货"
                android:textSize="@dimen/sp_12"
                android:textColor="@color/text_color_six"
                android:gravity="center"
                />
            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="待评价"
                android:textSize="@dimen/sp_12"
                android:textColor="@color/text_color_six"
                android:gravity="center"
                />
            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="已完成"
                android:textSize="@dimen/sp_12"
                android:textColor="@color/text_color_six"
                android:gravity="center"
                />

        </LinearLayout>
    </LinearLayout>
    <android.support.v4.view.ViewPager
        android:layout_width="match_parent"
        android:id="@+id/PurchaseViewPage"
        android:layout_height="match_parent"
        android:background="@drawable/viewpage_background"
        />

</LinearLayout>